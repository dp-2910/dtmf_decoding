        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/start_receiver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="Start" />

        <Button
            android:id="@+id/stop_receiver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="Stop" />
